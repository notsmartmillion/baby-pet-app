{
  "name": "baby-pet-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:mobile\"",
    "dev:api": "cd services/api && npm run dev",
    "dev:worker": "cd services/api && npm run dev:worker",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:gpu": "cd services/worker-gpu && python app.py",
    "build": "npm run build:types && npm run build:api",
    "build:types": "cd packages/types && npm run build",
    "build:api": "cd services/api && npm run build",
    "prisma:generate": "cd services/api && npm run prisma:generate",
    "prisma:migrate": "cd services/api && npm run prisma:migrate",
    "prisma:seed": "cd services/api && npm run prisma:seed",
    "prisma:studio": "cd services/api && npm run prisma:studio",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "docker:up": "cd infra && docker-compose up -d",
    "docker:down": "cd infra && docker-compose down",
    "docker:logs": "cd infra && docker-compose logs -f",
    "clean": "rm -rf node_modules apps/*/node_modules services/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
